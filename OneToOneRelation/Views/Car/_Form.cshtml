@model CarViewModel

<h2>@(Model.CarId != null ? $"Промени кола: {Model.Model}" : "Добави кола")</h2>
           
<form asp-controller="Car" asp-action="@(Model.CarId != null ? "Update" : "Create")" method="post">
    <input type="hidden" asp-for="CarId" />

    <div class="row mb-3 p-1">
        <label asp-for="Model" class="p-0"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="row mb-3 p-1">
        <label asp-for="PlateNumber" class="p-0"></label>
        <input asp-for="PlateNumber" class="form-control" />
        <span asp-validation-for="PlateNumber" class="text-danger"></span>
    </div>
  
    <div class="row justify-content-center">
        <div class="col-4">
            <button type="submit" class="btn btn-primary form-control">@(Model.CarId != null ? "Редактирай" : "Създай")</button>
        </div>
        <div class="col-4">
            <a asp-controller="Car" asp-action="Index" class="btn btn-outline-secondary form-control">Към списъка</a>
        </div>
    </div>
</form>
           